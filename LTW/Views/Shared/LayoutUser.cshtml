﻿
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

        .img-responsive:hover {
            transform: scale(0.9);
            cursor: pointer;
        }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            @Html.Action("NavPartial", "SachOnline")
        </div>

    </nav>



    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="caroulse1" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#corousel1" data-slide-to="0" class="active"></li>
                        <li data-target="#corousel1" data-slide-to="1" class=""></li>
                        <li data-target="#corousel1" data-slide-to="2" class=""></li>
                        <li data-target="#corousel1" data-slide-to="3" class=""></li>
                        <li data-target="#corousel1" data-slide-to="4" class=""></li>
                        <li data-target="#corousel1" data-slide-to="5" class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-responsive" src="~/Images/Slider/01.jpg" alt="thumb">
                            <div class="carousel-caption">Quang cao 1</div>
                        </div>
                        <div class="item ">
                            <img class="img-responsive" src="~/Images/Slider/02.jpg" alt="thumb">
                            <div class="carousel-caption">Quang cao 2</div>
                        </div>
                        <div class="item ">
                            <img class="img-responsive" src="~/Images/Slider/03.jpg" alt="thumb">
                            <div class="carousel-caption">Quang cao 3</div>
                        </div>
                        <div class="item ">
                            <img class="img-responsive" src="~/Images/Slider/04.jpg" alt="thumb">
                            <div class="carousel-caption">Quang cao 4</div>
                        </div>
                        <div class="item ">
                            <img class="img-responsive" src="~/Images/Slider/05.jpg" alt="thumb">
                            <div class="carousel-caption">Quang cao 5</div>
                        </div>
                        <div class="item ">
                            <img class="img-responsive" src="~/Images/Slider/06.jpg" alt="thumb">
                            <div class="carousel-caption">Quang cao 6</div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#carousel1" data-slide="prev"><span class="icon-prev"></span></a>
                    <a class="right carousel-control" href="#carousel1" data-slide="next"><span class="icon-next"></span></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <!--CHU DE va NHA XUAT BAN-->
                <br>
                @Html.Action("ChuDePartial", "SachOnline")
                <br>
                @Html.Action("NhaXuatBanPartial", "SachOnline")

            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
        <hr>
    </div>
    <div class="container">
        @Html.Action("SachBanNhieuPartial", "SachOnline")
        <hr>
    </div>
    <footer class="container well"></footer>

</body>
</html>